// ejercicio 1 
var
arregloName = ["Oscar", "pepe", "mario"],
arregloNum = [1254, 25639, 589422],
arregloBoole = [true, false, true],

arregloAnidado = [];

for ( var i = 0; i < arregloName.length; i++){
	arregloAnidado[i] = [arregloName[i], arregloNum[i], arregloBoole[i]];
}

console.log(arregloAnidado);


// ejercicio 2

var arregloRandom = [];

for (var i=0; i < 100; i++) {
  var random = Math.floor(Math.random() * 100);
  arregloRandom.push(random);
}

console.log(arregloRandom);

// ejercicio 3 

var lista = [];

function aLaLista() {
  
	var name = prompt("dime tu nombre");
	var asistencia = confirm("vas al evento?");
      
	if (asistencia === true){
		lista.push(name);
    console.log("la lista es la siguiente: "+ lista +". Tu nombre es", name, "que está en la posición", lista.indexOf(name));
		
    console.log(lista);
  }   
}

function fuera (){
  var name = confirm("que usuario quieres eliminar");
  
  var buscarNombre = lista.indexOf(name)
  lista[buscarNombre] = null;  
   if (fuera === true){
    	lista.splice(name);    
   }
}
fuera ();
aLaLista();

// ejercicio máquina 

//clientes

var usuario = [];

 
  	function gestionUsuarios() {
      
      var usuarioNuevo = {   
        nombre: prompt("dime tu nombre"),
        apellido: prompt("dime tu apellido"),
        alias: prompt("dime tu alias"),
        pass: prompt("dime tu contraseña"),
        tipo: prompt("dime tu user"),
        presu: Number(prompt("dime tu presu")), 
			};
      
      if (usuarioNuevo.nombre === '' || usuarioNuevo.apellido === '' 
          || usuarioNuevo.alias  === '' 
          || usuarioNuevo.pass  === '' 
          || usuarioNuevo.tipo  === '' 
          || usuarioNuevo.presu  === ''){
        	alert("usuario mal cumplimentado");     
       } else {
          if (usuarioExistente(usuarioNuevo.alias) === false){
          		usuario.push(usuarioNuevo);	
          		console.log(usuario);
          } else {
            	alert("usuario registrado previamente");
          }
      }     
	}
  
    function gestionSaldo() {
      if (usuarioNuevo.presu > 0 ){
          console.log("su saldo es", usuarioNuevo.presu);
          return usuarioNuevo.pass && usuarioNuevo.user;
      } else {
        alert ("no tiene dinero!");
      }	
    }
  
  function usuarioExistente (alias){
    for (var i = 0; i < usuario.length ; i++){
    	var user = usuario[i];
      if (user.alias === alias) {
        console.log("usuario registrado");
        return true;
      }
    }
    
   return false;
    
  }
 
  
gestionUsuarios();
gestionSaldo();


// lista productos

var productos = [];

function productoNuevo(a, b, c, d, f) {
	a = {
	    name : 'plátano',
	    precio: '2puntos',
	};

	b = {
    	name : 'patatas',
		precio: '1punto',
	};
  
    c = {
    	name : 'Coca Cola',
		precio: '5puntos',
	};

	d = {
    	name : 'Coca Cola',
		precio: '5puntos',
	};

	f = {
    	name : 'Coca Cola',
		precio: '5puntos',
	};

	productos.push(a, b, c);
	console.log(productos);
}

productoNuevo('plátano', 'patatas', 'Coca Cola', 'limón', 'naranja');
		

